{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "The Root Schema Product",
    "properties": {
        "id": {
            "type": "string",
            "uniqueItems": true
        },
        "appUUID": {
            "type": "string"
        },
        "category": {
            "type": "array"
        },
        "product": {
            "type": "string"
        },
        "price": {
            "type": "number"
        },
        "currency": {
            "type": "string"
        },
        "checkColor": {
            "type": "boolean"
        },
        "colors": {
            "type": "array"
        },
        "description": {
            "type": "string"
        },
        "images": {
            "type": "array"
        },
        "published": {
            "type": "boolean"
        },
        "createdAt": {
            "type": "string"
        },
        "updateAt": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "appUUID",
        "category",
        "product",
        "checkColor",
        "description",
        "images"
    ]
}